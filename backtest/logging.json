{
  "version": 1,
  "disable_existing_loggers": true,
  "formatters": {
    "thread": {
      "format": "%(asctime)s %(threadName)-11s %(levelname)-8s %(message)s"
    },
    "process": {
      "format": "%(asctime)s %(processName)-11s %(levelname)-8s %(message)s"
    }
  },
  "handlers": {
    "console_thread": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "thread"
    },
    "console_process": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "process"
    }
  },
  "loggers": {
    "router.py": {
      "level": "DEBUG",
      "handlers": [
        "console_thread"
      ]
    },
    "fetcher.py": {
      "level": "DEBUG",
      "handlers": [
        "console_thread"
      ]
    },
    "analyzer.py": {
      "level": "DEBUG",
      "handlers": [
        "console_process"
      ]
    },
    "broker.py": {
      "level": "DEBUG",
      "handlers": [
        "console_thread"
      ]
    },
    "ledger.py": {
      "level": "DEBUG",
      "handlers": [
        "console_thread"
      ]
    }
  }
}
